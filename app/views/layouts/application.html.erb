<!DOCTYPE html>
<html>
<head>
  <title>Archidiecezjalne Studium Życia Rodzinnego</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-12055233-5']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
</head>
<body>

  <!-- LOGO -->
  <div id="logo">
    <div class="container_16">
      <div class="grid_4">
        <%= image_tag 'logo.png' %>
      </div>
      <div class="grid_12">
        Archidiecezjalne Studium Życia Rodzinnego
      </div>
    </div>
    <div class="clear"></div>
  </div>

  <!-- FLASH MESSAGE -->
  <div id="flash_message">
    <% if flash[:notice] %>
      <p id="flash_notice"><%= flash[:notice] %></p>
      <% flash[:notice] = nil %>
    <% end %>
    <% if flash[:error] %>
      <p id="flash_error"><%= flash[:error] %></p>
      <% flash[:error] = nil %>
    <% end %>
  </div>
  <div class="clear"></div>

  <!-- CONTENT -->
  <div id="main" class="container_16">
    <div class="grid_4">
      <%= render :partial => 'layouts/menu' %>
    </div>
    <div class="grid_12">
      <%= yield %>
    </div>
  </div>
  <div class="clear"></div>

  <!-- FOOTER -->
  <div id="footer">
    <div>
      <span>Copyright MacGajek 2012</span>
    </div>
  </div>

</body>
</html>
